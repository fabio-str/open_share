<%= render partial: "shared/heading", locals: { title: 'Write an Update', description: 'Share the latest news from your project.' } %>

<div class="items-start space-x-4 max-w-2xl mx-auto">
  <div class="min-w-0">
    <form action="#" class="relative">
      <div class="overflow-hidden rounded-lg shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600">
        <label for="project_update" class="sr-only">Add your project_update</label>
        <textarea rows="3" name="project_update" id="project_update" class="block w-full resize-none border-0 bg-transparent py-1.5 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="Add your comment..."></textarea>

        <!-- Spacer element to match the height of the toolbar -->
        <div class="py-2" aria-hidden="true">
          <!-- Matches height of button in toolbar (1px border + 36px content height) -->
          <div class="py-px">
            <div class="h-9"></div>
          </div>
        </div>
            <div class="text-right py-2 pl-3 pr-2">
                <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Post</button>
            </div>
        </div>
    </form>
  </div>
</div>

<%= render partial: "shared/heading", locals: { title: 'Dashboard', description: 'Browse newsletters and upload your own.' } %>

<!-- main box area -->
<div class="border border-black border-2 p-5 max-w-3xl mx-auto mb-20">
  <div class="flex">
    <div class="basis-1/2">
      <div class="flex gap-x-2">
        <div class="basis-1/6">
          <img src="https://logo.clearbit.com/<%= @project.website %>" alt="">
        </div>
        <div class="basis-5/6">
          <p class="text-lg"><%= @project.title %></p>
          <p class="text-sm"><%= @project.description %> </p>
        </div>
      </div>
    </div>
    <div class="basis-1/2 text-right">
      <p>{{ Num }} Subscribers</p>
      <p><a href="/project_updates/new" class="underline text-primary">Share update</a></p>
      <p><a href="" class="underline text-primary">Edit subscription</a></p>
    </div>
  </div>
</div>

<!-- newsletters -->

<div class="p-5 max-w-3xl mx-auto space-y-4">

  <% @other_projects.each do |p| %>
    <div class="flex  border border-dashed border-2 p-2">
      <div class="basis-1/2">
        <div class="flex gap-x-2">
          <div class="basis-1/6">
            <img src="https://logo.clearbit.com/<%= p.website %>" alt="">
          </div>
          <div class="basis-5/6">
            <p class="text-lg"><%= p.title %></p>
            <p class="text-sm"><%= p.description %> <%= p.website %></p>
          </div>
        </div>
      </div>
      <div class="basis-1/2 text-right">
        <div class="relative flex items-start py-4">
          <div class="min-w-0 flex-1 text-sm">
            <label for="subscribed" class="font-medium text-gray-700">{{ Subscribed Status }}</label>
          </div>
          <div class="ml-3 flex h-5 items-center">
            <input id="subscribed" aria-describedby="subscribed" name="subscribed" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary-hover-500">
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>